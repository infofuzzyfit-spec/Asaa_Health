{
    "name": "asaa/healthcare-appointment-system",
    "description": "ASAA Healthcare Appointment Management System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "ASAA Healthcare",
            "email": "admin@asaahealthcare.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/",
            "Config\\": "config/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
